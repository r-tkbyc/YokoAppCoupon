{
  "manifest_version": 3,
  "name": "YokoAppCoupon流し込みツール連携",
  "version": "0.1.0",
  "description": "KoMaTukuru → 横浜CMS（新規クーポン）へ自動入力（タイトルのみ）",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://front-admin.taspapp.takashimaya.co.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://front-admin.taspapp.takashimaya.co.jp/store-coupons/new*"
      ],
      "js": ["cms_inject.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://YOUR-KOMATUKURU-URL-HERE/*"
      ],
      "js": ["koma_inject.js"],
      "run_at": "document_idle"
    }
  ]
}
