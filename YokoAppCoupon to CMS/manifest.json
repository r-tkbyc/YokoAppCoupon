{
  "manifest_version": 3,
  "name": "YokoAppCoupon to CMS",
  "version": "1.1.6",
  "description": "YokoAppCoupon（GitHub Pages）から、別タブのCMSへ自動入力します。",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": [
    "https://r-tkbyc.github.io/*",
    "https://front-admin.taspapp.takashimaya.co.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://r-tkbyc.github.io/YokoAppCoupon/*"],
      "js": ["koma_inject.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://front-admin.taspapp.takashimaya.co.jp/store-coupons/*"],
      "js": ["cms_inject.js"],
      "run_at": "document_idle"
    }
  ]
}
